<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.cream.geuntae_hobby.ui.setting.SettingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/contact_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="21dp"
            android:fontFamily="@font/kimm_light"
            android:gravity="center_vertical"
            android:text="피드백 해주기"
            android:textColor="@color/geuntae_black_01"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ib_more_email"
            app:layout_constraintEnd_toStartOf="@id/ib_more_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ib_more_email" />

        <ImageButton
            android:id="@+id/ib_more_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_more_48_gray500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/appVersion"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/kimm_light"
            android:gravity="center_vertical"
            android:text="@string/app_version"
            android:textColor="@color/geuntae_black_01"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ib_more_appVersion"
            app:layout_constraintEnd_toStartOf="@id/ib_more_email"
            app:layout_constraintStart_toStartOf="@id/contact_email"
            app:layout_constraintTop_toTopOf="@id/ib_more_appVersion" />

        <ImageButton
            android:id="@+id/ib_more_appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_more_48_gray500"
            app:layout_constraintEnd_toEndOf="@id/ib_more_email"
            app:layout_constraintTop_toBottomOf="@id/ib_more_email" />

        <TextView
            android:id="@+id/app_license"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/kimm_light"
            android:gravity="center_vertical"
            android:text="사용한 기술 스택"
            android:textColor="@color/geuntae_black_01"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ib_more_open_app_license"
            app:layout_constraintEnd_toStartOf="@id/ib_more_appVersion"
            app:layout_constraintStart_toStartOf="@id/appVersion"
            app:layout_constraintTop_toTopOf="@id/ib_more_open_app_license" />

        <ImageButton
            android:id="@+id/ib_more_open_app_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_more_48_gray500"
            app:layout_constraintEnd_toEndOf="@id/ib_more_appVersion"
            app:layout_constraintTop_toBottomOf="@id/ib_more_appVersion" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>